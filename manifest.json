{
  "name": "Codesmith Everywhere",
  "description": "There can only be one...",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
     "default_icon": {
      "16": "/images/sentance16.png",
      "32": "/images/sentance32.png",
      "48": "/images/sentance48.png"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": ["content-script.js"]
  }],
  "icons": {
    "16": "/images/sentance16.png",
    "32": "/images/sentance32.png",
    "48": "/images/sentance48.png"
  }
}